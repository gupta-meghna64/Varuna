<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainOutsideLayout">

    <TextView
        android:id="@+id/detailsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETAILS"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@+id/headingLayout"
        android:layout_above="@+id/insideContentLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <RelativeLayout
        android:id="@+id/headingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/headingView">

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:id="@+id/headingView"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/insideContentLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/headingView"
        android:layout_above="@+id/bottomBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/topLeft"
            android:layout_above="@+id/horizontalLine"
            android:layout_toLeftOf="@+id/verticalLine"
            android:background="#c5cd87">

            <ImageButton
                android:id="@+id/plant1Refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_refresh" />

            <TextView
                android:id="@+id/plant1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:text="" />

            <TextView
                android:id="@+id/plant1Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/plant1Name"
                android:layout_alignLeft="@+id/plant1Name"
                android:layout_alignStart="@+id/plant1Name"
                android:layout_marginTop="18dp" />

            <TextView
                android:id="@+id/plant1Moisture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/plant1Number"
                android:layout_alignLeft="@+id/plant1Number"
                android:layout_alignStart="@+id/plant1Number"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/plant1Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/plant1Moisture"
                android:layout_alignLeft="@+id/plant1Moisture"
                android:layout_alignStart="@+id/plant1Moisture"
                android:layout_marginTop="16dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomLeft"
            android:layout_below="@id/horizontalLine"
            android:layout_toLeftOf="@+id/verticalLine"
            android:background="#d7e6ac">

            <ImageButton
                android:id="@+id/plant2Refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_refresh" />

            <TextView
                android:id="@+id/plant2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:text=""
                android:layout_above="@+id/plant2Number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/plant2Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/plant2Name"
                android:layout_alignStart="@+id/plant2Name" />

            <TextView
                android:id="@+id/plant2Moisture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_above="@+id/plant2Temperature"
                android:layout_alignLeft="@+id/plant2Number"
                android:layout_alignStart="@+id/plant2Number"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/plant2Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="33dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/plant2Number"
                android:layout_alignStart="@+id/plant2Number" />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/topRight"
            android:layout_above="@+id/horizontalLine"
            android:layout_toRightOf="@+id/verticalLine"
            android:background="#A5B680">

            <ImageButton
                android:id="@+id/plant3Refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_refresh" />

            <TextView
                android:id="@+id/plant3Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/plant3Number"
                android:layout_alignLeft="@+id/plant3Number"
                android:layout_alignStart="@+id/plant3Number"
                android:layout_marginBottom="11dp" />

            <TextView
                android:id="@+id/plant3Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/plant3Moisture"
                android:layout_alignLeft="@+id/plant3Moisture"
                android:layout_alignStart="@+id/plant3Moisture"
                android:layout_marginBottom="7dp" />

            <TextView
                android:id="@+id/plant3Moisture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/plant3Temperature"
                android:layout_alignLeft="@+id/plant3Temperature"
                android:layout_alignStart="@+id/plant3Temperature"
                android:layout_marginBottom="11dp" />

            <TextView
                android:id="@+id/plant3Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomRight"
            android:layout_below="@id/horizontalLine"
            android:layout_toRightOf="@id/verticalLine"
            android:background="#e2deb0"
            >

            <ImageButton
                android:id="@+id/plant4Refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_refresh" />

            <TextView
                android:id="@+id/plant4Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/plant4Number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="39dp"
                android:layout_marginStart="39dp" />

            <TextView
                android:id="@+id/plant4Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/plant4Name"
                android:layout_alignStart="@+id/plant4Name" />

            <TextView
                android:id="@+id/plant4Moisture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/plant4Number"
                android:layout_alignLeft="@+id/plant4Number"
                android:layout_alignStart="@+id/plant4Number"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/plant4Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/plant4Moisture"
                android:layout_alignLeft="@+id/plant4Moisture"
                android:layout_alignStart="@+id/plant4Moisture"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_centerVertical="true"
            android:id="@+id/horizontalLine"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:id="@+id/verticalLine"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/insideContentLayout"
        android:background="#000000"
        android:id="@+id/bottomView"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bottomBar"
        android:background="#000000"
        >
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:backgroundTint="@color/fab"
            android:src="@drawable/power"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:id="@+id/detailog"
            android:layout_alignTop="@+id/detailhome"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            android:src="@drawable/home1"
            app:backgroundTint="@color/fab"
            android:id="@+id/detailhome"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

    </RelativeLayout>

</RelativeLayout>